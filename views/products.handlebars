{{!< main}}
<h1>Productos</h1>

<form method="GET" action="/api/products">
  <label for="category">Categoría:</label>
  <input type="text" id="category" name="category">
  
  <label for="available">Disponible:</label>
  <select id="available" name="available">
    <option value="">Todos</option>
    <option value="true">Disponible</option>
    <option value="false">No disponible</option>
  </select>
  
  <label for="sortByPrice">Ordenar por precio:</label>
  <select id="sortByPrice" name="sortByPrice">
    <option value="">Ninguno</option>
    <option value="asc">Ascendente</option>
    <option value="desc">Descendente</option>
  </select>
  
  <button type="submit">Filtrar</button>
</form>

<ul>
  {{#each products}}
    <li>
      Título: {{this.title}}<br>
      Descripción: {{this.description}}<br>
      Código: {{this.code}}<br>
      Precio: ${{this.price}}<br>
      Estado: {{#if this.status}}Activo{{else}}Inactivo{{/if}}<br>
      Stock: {{this.stock}}<br>
      Categoría: {{this.category}}<br>
      <button onclick="location.href='/products/{{this._id}}'">Ver detalles</button>
      <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
      <button onclick="deleteFromCart('{{this._id}}')">Eliminar del carrito</button>
    </li>
  {{/each}}
</ul>

<div>
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">Anterior</a>
  {{/if}}
  <span>Página {{page}} de {{totalPages}}</span>
  {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente</a>
  {{/if}}
</div>

<script>
  function deleteFromCart(productId) {
    const cartId = '{{cartId}}';
    fetch(`/api/carts/${cartId}/products/${productId}`, {
      method: 'DELETE',
    })
    .then(response => response.json())
    .then(data => {
      if (data.status === 'success') {
        alert('Producto eliminado del carrito');
        location.reload();
      } else {
        alert('Error al eliminar producto del carrito');
      }
    });
  }
</script>